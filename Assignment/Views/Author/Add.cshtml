@model Assignment.Models.Author

<form class="card p-3 bg-light" asp-controller="Author" asp-action="Add" method="post">
    <h3 class="text text-primary">Create a new Author</h3>
    <div class="form-group">
        <label class="form-control" asp-for="Name" class="text text-success"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text text-warning"></span>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="Country" class="text text-success"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text text-warning"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Create" />
    </div>

</form>