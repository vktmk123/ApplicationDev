@model ICollection<Category>

<div class="container col-md-6 text-center mt-5">
    @if (@TempData["message"] != null)
    {
        <p class="alert alert-danger">@TempData["message"]</p>
    }
    <table class="table table-bordered">
        <tr>
            <th colspan="2">Category List</th>
            
        </tr>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>
                    <a class="font-weight-bold" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">
                        @category.Name
                    </a>

                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" class="btn btn-warning" asp-route-id="@category.Id">Edit</a>
                    <a onclick="return confirm(" Are you want to delete this category ?")" asp-controller="Category" asp-action="Delete" class="btn btn-danger" asp-route-id="@category.Id">Delete</a>

                </td>
            </tr>
        }


    </table>
</div>